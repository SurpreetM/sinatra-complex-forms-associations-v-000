<h1>Update Pet</h1>

<form method="post" action="/pets/<%=@pet.id%>">
  Name: <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

  Choose an existing owner:
  <br>
  <%Owner.all.each do |owner|%>
    <input type="radio" name="pet[owner_id]" value="<%=owner.id%>">
  <%end%>


  <input type="submit" value="Update Pet">

</form>
